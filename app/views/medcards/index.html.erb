<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

<p style="color: lightseagreen"><%= notice %></p>
<div class="content has-text-centered">
  <h1 class="h1">Medcards</h1>
  <title> Medcards </title>
</div>

<div class="container is-widescreen has-text-centered is-center ">

  <% column_names = @medcards.column_names %>
  <div class="table-container is-align-items-center is-align-content-center is-justify-content-center is-centered" id="medcards">
    <table class="table  is-centered">
      <thead>
      <tr>
        <% column_names.each do |column_name| %>
          <td><%= column_name %></td>
        <% end %>
        <td>Action</td>
      </tr>

      </thead>
      <tbody>

      <% @medcards.each do |medcard| %>
        <tr>
          <% column_names.each do |column| %>
            <td><%= medcard.send(column) %></td>
          <% end %>
          <td><%= link_to "Show this medcard", medcard %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "New medcard", new_medcard_path, { class: "button" } %>